@model IEnumerable<Services>
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Services</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="General" asp-controller="Services" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp Create New Service
            </a>
        </div>
    </div>
    <br /><br />

    <table class="table table-bordered tabletable-striped" style="width:100%">
        <thead>
            <tr>
                <th>Service</th>
                <th>Price</th>
                <th>Description</th>
                <th width="5">Edit</th>
                <th width="5">Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var service in Model)
            {
                <tr>
                    <td>
                        @service.Name
                    </td>
                    <td>
                        @*@service.""*@
                    </td>
                    <td>
                        @service.Description
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                             <a asp-area="General"
                                asp-controller="Services"
                                asp-action="Edit"
                                asp-route-id="@service.Id"
                                class="btn btn-primary mx-1">
                                <i class="bi bi-pencil-square">
                                </i>
                             </a>
                        </div>
                    </td>
                     <td>
                        <div class="w-75 btn-group" role="group">
                             <a asp-area="General"
                                asp-controller="Services"
                                asp-action="Delete"
                                asp-route-id="@service.Id"
                                class="btn btn-danger mx-1">
                                <i class="bi bi-trash3">
                                </i>
                             </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>